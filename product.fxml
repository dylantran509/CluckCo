<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="prodCard" prefHeight="307.0" prefWidth="180.0" style="-fx-border-radius: 10;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prodController">
   <children>
      <ImageView id="styles.css" fx:id="img" fitHeight="224.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/blackHoodie.png" />
         </image>
         <styleClass>
            <String fx:value="white-background" />
            <String fx:value="shadow" />
            <String fx:value="round-layout" />
         </styleClass>
      </ImageView>
      <VBox prefHeight="94.0" prefWidth="160.0" styleClass="transparent" stylesheets="@styles.css">
         <children>
            <Label fx:id="prodName" alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="24.0" prefWidth="161.0" text="Black Hoodie">
               <font>
                  <Font name="InaiMathi" size="15.0" />
               </font>
            </Label>
            <Label fx:id="prodPrice" alignment="TOP_CENTER" prefHeight="24.0" prefWidth="160.0" text="\$50.00">
               <font>
                  <Font name="InaiMathi" size="15.0" />
               </font>
            </Label>
            <Button fx:id="addToCart" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="95.0" style="-fx-border-radius: 15; -fx-background-color: white;" stylesheets="@style.css" text="ADD TO CART" textAlignment="CENTER" translateX="33.0">
               <font>
                  <Font name="InaiMathi" size="13.0" />
               </font>
               <styleClass>
                  <String fx:value="round-layout" />
                  <String fx:value="selected" />
                  <String fx:value="mouse-moved" />
                  <String fx:value="transparent" />
               </styleClass>
            </Button>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <styleClass>
      <String fx:value="white-background" />
      <String fx:value="shadow" />
   </styleClass>
</VBox>
